<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 toolTip="{ch}"
		 width="100" height="50">
	<fx:Script>
		<![CDATA[
			[Bindable] public var ch:String = '';
			[Bindable] public var chNO:String = '';
			[Bindable] public var img:* = '';
			[Bindable] public var imgvisable:Boolean = true;
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Rect top="0" left="0" right="0" bottom="0">
		<s:fill>
			<s:SolidColor color="white" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xcccccc" />
		</s:stroke>
	</s:Rect>
	<s:Image visible="{imgvisable}" left="1" right="1" top="1" bottom="1" source="{img}"/>
	<s:Label right="1" bottom="1"  fontSize="9" fontStyle="italic" text="[{chNO}]"/>
</s:Group>
