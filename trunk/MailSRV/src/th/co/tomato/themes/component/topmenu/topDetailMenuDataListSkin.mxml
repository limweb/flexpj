<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="200" height="100%">
	<fx:Metadata>[HostComponent("spark.components.List")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import th.co.tomato.themes.FlatTheme;
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Rect top="0" left="0" right="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke color="{FlatTheme.upColor}" weight="1" />
		</s:stroke>
	</s:Rect>
	<s:DataGroup id="dataGroup" x="0" y="0" width="100%" 
				 clipAndEnableScrolling="true"
				 itemRenderer="th.co.tomato.themes.component.topmenu.topDetailMenuDataListSkinRepeatedItemSkin"
				 height="100%">
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
	</s:DataGroup>
</s:Skin>
