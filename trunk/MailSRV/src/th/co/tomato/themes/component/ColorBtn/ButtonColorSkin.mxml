<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		width="30" height="50">
	<fx:Metadata>[HostComponent("th.co.tomato.themes.component.MainClass.MyIconBtn")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import th.co.tomato.themes.FlatTheme;
		]]>
	</fx:Script>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:Rect x="0" y="0" width="100%" height="100%">
		<s:fill>
			<s:SolidColor color.up="{FlatTheme.upColor}"
						  color.over="{FlatTheme.overColor}"
						  color.down="{FlatTheme.overColor}"
						  color.disabled="0xb1b1b1"
						  />
		</s:fill>
	</s:Rect>
	<s:Group width="30" height="50"  right="0" >
		<s:RichText id="data1" color="0xFFFFFF" fontFamily="myiconfont" fontSize="12"
					tabStops="S0 S50 S100" text="{hostComponent.iconText}"
					horizontalCenter="0" verticalCenter="0"/>
	</s:Group>
</s:Skin>
